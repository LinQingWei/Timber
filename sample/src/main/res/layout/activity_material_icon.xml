<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:theme="@style/ToolbarTheme"
        app:title="Toolbar context" />

    <cn.way.sample.material_icon.SetBoundsTest
        android:layout_width="match_parent"
        android:layout_height="144dp" />

    <cn.way.material_icon.MaterialIconView
        android:id="@+id/file_icon"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/somecolor"
        app:materialIcon="file"
        app:materialIconColor="?attr/materialIconColor" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/file_icon"
        android:numColumns="5"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".material_icon.MaterialIconActivity" />
</LinearLayout>